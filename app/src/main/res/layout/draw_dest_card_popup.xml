<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:layout_centerInParent="true"
    android:background="@color/light_grey_transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/choose2destCards"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/first_dest_card_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:clickable="true"
            android:text="dest1" />

        <TextView
            android:id="@+id/second_dest_card_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:clickable="true"
            android:text="dest2" />

        <TextView
            android:id="@+id/third_dest_card_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:clickable="true"
            android:text="dest3" />

        <Button
            android:id="@+id/dest_card_popup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:layout_margin="10dp"
            android:layout_gravity="right"/>

    </LinearLayout>

</RelativeLayout>